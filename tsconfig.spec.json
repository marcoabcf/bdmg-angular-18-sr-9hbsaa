{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./out-tsc/spec",
      "types": ["jasmine", "node"],
      "target": "es2022",
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "files": ["src/test.ts"],
    "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
  }